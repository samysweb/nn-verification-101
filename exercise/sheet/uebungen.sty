\newcounter{aufgabennr}
\newcounter{loesungsnr}

\newenvironment{aufgabe}[1][]{%
  \addtocounter{aufgabennr}{1}%
  \global\def\@currentlabel{\theaufgabennr}%
  \noindent%
  \underline{\bf Aufgabe~\theaufgabennr}\hfill#1\par\medskip\noindent\gobblespaces}{\bigskip}

\newenvironment{themenaufgabe}[2]{%
  \addtocounter{aufgabennr}{1}%
  \global\def\@currentlabel{\theaufgabennr}%
  \noindent%
  \underline{\bf Aufgabe~\theaufgabennr}:~\textbf{#1}\hfill\textbf{\punkte{#1}}\par\medskip\noindent\gobblespaces}{\bigskip}

\newenvironment{loesung}[1][]{
  \addtocounter{loesungsnr}{1}%
  \global\def\@currentlabel{\theloesungsnr}%
  \noindent%
  \underline{\bf L\"osung zu~Aufgabe~\theloesungsnr}~\textbf{#1}\par\medskip\noindent\gobblespaces}{%
  \bigskip}

